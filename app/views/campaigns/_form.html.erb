<%= simple_form_for @campaign do |f| %>
  <%= f.input :name, label: "Campaign Name", input_html: {class: "abc"} %>
  <%= f.input :description, label: false %>
  <%= f.input :goal, as: :string %>
  <%= f.input :end_date %>
  <%= f.input :image, input_html: {class: "btn btn-primary"} %>
  <%# f.file_field :image %>
  <%= f.submit class: "btn btn-primary btn-block" %>
<% end %>
